<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
                android:background="@color/bg"
              android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView android:layout_width="300dp" android:layout_height="360dp"
                                           android:id="@+id/splashLottie"
                                           app:lottie_fileName="astronout.json"
                                           app:lottie_loop="true"
                                           android:layout_centerInParent="true"
                                           app:lottie_autoPlay="true"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textSize="30sp"
              android:text="Temukan Kata"
              android:layout_above="@+id/splashLottie"
              android:textColor="@color/white"
              android:fontFamily="sans-serif-condensed"
              android:gravity="center"
              android:alpha="0"
              android:layout_marginBottom="-30dp"
              android:id="@+id/splash1"
              android:textStyle="bold"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textSize="30sp"
              android:text="Yang Kamu Sukai"
              android:layout_below="@+id/splashLottie"
              android:alpha="0"
              android:layout_marginTop="-30dp"
              android:textColor="@color/white"
              android:id="@+id/splash2"
              android:fontFamily="sans-serif-condensed"
              android:gravity="center"
              android:textStyle="bold"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:gravity="center"
              android:text="Dibuat oleh { Ricky V | _Hikki }"
              android:layout_alignParentBottom="true"
              android:textColor="@color/white"
              android:textSize="15sp"
              android:layout_marginBottom="2dp"
              />
</RelativeLayout>